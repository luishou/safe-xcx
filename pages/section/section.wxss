/* 交互样式 */
.hover-bg-gray-100 {
    background-color: #f3f4f6;
}

.transition {
    transition: all 0.3s ease;
}

.transition-all {
    transition: all 0.3s ease;
}

.duration-300 {
    transition-duration: 0.3s;
}

.hover-shadow-xl {
    box-shadow: 0 20rpx 25rpx -5rpx rgba(0, 0, 0, 0.1), 0 10rpx 10rpx -5rpx rgba(0, 0, 0, 0.04);
}

.hover-scale-105 {
    transform: scale(1.05);
}