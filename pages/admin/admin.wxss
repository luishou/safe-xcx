/* 安全环保部管理页面样式 */
.manager-view {
    background: #f8f9fa;
    min-height: 100vh;
    padding-bottom: 120rpx;
}

/* 顶部导航栏 */
.top-nav {
    display: flex;
    align-items: center;
    padding: 20rpx 32rpx;
    background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
    color: white;
    box-shadow: 0 4rpx 12rpx rgba(79, 70, 229, 0.3);
}

.back-btn {
    font-size: 28rpx;
    margin-right: 24rpx;
    padding: 12rpx 16rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 8rpx;
    transition: all 0.3s ease;
}

.back-btn:active {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-1rpx);
}

.nav-title {
    font-size: 32rpx;
    font-weight: bold;
    color: white;
}

/* 顶部图标菜单 */
.icon-menu {
    display: flex;
    gap: 20rpx;
    padding: 24rpx;
}

.icon-card {
    flex: 1;
    background: white;
    border-radius: 16rpx;
    padding: 32rpx 24rpx;
    text-align: center;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.icon-card:active {
    transform: translateY(-2rpx);
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.12);
}

.icon-emoji {
    display: block;
    font-size: 48rpx;
    margin-bottom: 8rpx;
}

.icon-label {
    font-size: 26rpx;
    color: #374151;
}

/* 选中状态淡色背景 */
.icon-card.selected {
    background: #eef2ff;
}

/* 统计面板 */
.stats-panel {
    padding: 24rpx;
}

.filter-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
}

.filter-bar {
    display: flex;
    gap: 16rpx;
    flex: 1;
}

.refresh-btn {
    background: #10b981;
    color: white;
    padding: 16rpx 24rpx;
    border-radius: 12rpx;
    font-size: 24rpx;
    margin-left: 16rpx;
}

.export-btn {
    background: #3b82f6;
    color: white;
    padding: 16rpx 24rpx;
    border-radius: 12rpx;
    font-size: 24rpx;
}

.filter-option {
    flex: 1;
    background: #eef2ff;
    color: #4f46e5;
    text-align: center;
    padding: 16rpx 8rpx;
    border-radius: 12rpx;
    font-size: 24rpx;
}

.filter-option.active {
    background: #4f46e5;
    color: #ffffff;
}

.custom-range {
    display: flex;
    align-items: center;
    gap: 16rpx;
    margin-bottom: 16rpx;
}

.date-picker {
    background: white;
    padding: 20rpx 16rpx;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.apply-btn {
    background: #10b981;
    color: white;
    padding: 16rpx 24rpx;
    border-radius: 12rpx;
}

.status-summary {
    display: flex;
    gap: 16rpx;
    margin: 16rpx 0 8rpx 0;
}

.summary-card {
    flex: 1;
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.sum-label {
    font-size: 24rpx;
    color: #6b7280;
}

.sum-count {
    font-size: 36rpx;
    font-weight: bold;
    color: #111827;
}

.summary-card.pending { border-left: 6rpx solid #f59e0b; }
.summary-card.processing { border-left: 6rpx solid #3b82f6; }
.summary-card.completed { border-left: 6rpx solid #10b981; }

.overview-row {
    display: flex;
    gap: 16rpx;
    margin-bottom: 16rpx;
}

.overview-item {
    flex: 1;
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.overview-label { font-size: 24rpx; color: #6b7280; }
.overview-value { font-size: 32rpx; font-weight: bold; color: #111827; }

.hazard-chart-section { margin-top: 8rpx; }
.section-title { font-size: 28rpx; color: #374151; margin-bottom: 8rpx; }
.chart-container { background: white; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06); }
.pie-chart { display: block; margin: 0 auto; }

/* 饼图图例 */
.chart-legend { display: flex; flex-wrap: wrap; gap: 12rpx 24rpx; margin-top: 12rpx; }
.legend-item { display: flex; align-items: center; gap: 8rpx; }
.legend-color { width: 20rpx; height: 20rpx; border-radius: 4rpx; box-shadow: 0 1rpx 3rpx rgba(0,0,0,0.1); }
.legend-label { font-size: 24rpx; color: #374151; }

/* 状态标签 */
.status-tabs {
    display: flex;
    background: white;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
    position: sticky;
    top: 0;
    z-index: 100;
}

.status-tab {
    flex: 1;
    padding: 32rpx 20rpx;
    text-align: center;
    position: relative;
    transition: all 0.3s ease;
}

.status-tab.active {
    color: #4f46e5;
    background: #f0f9ff;
}

.status-tab.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 6rpx;
    background: #4f46e5;
    border-radius: 3rpx;
}

.tab-count {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
}

.tab-label {
    font-size: 24rpx;
    color: #6b7280;
}

.status-tab.active .tab-label {
    color: #4f46e5;
}

/* 工单列表容器 */
.reports-container {
    padding: 24rpx;
}

.reports-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

/* 工单项样式 */
.report-item {
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
}

.report-item:active {
    transform: translateY(-2rpx);
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16rpx;
}

.item-type {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
    font-size: 24rpx;
    font-weight: 500;
}

.item-status {
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
    font-size: 22rpx;
    font-weight: 500;
}

.item-status.confirmed {
    background: #d1fae5;
    color: #065f46;
}

.item-status.rejected {
    background: #fee2e2;
    color: #dc2626;
}

.item-desc {
    font-size: 28rpx;
    color: #374151;
    line-height: 1.6;
    margin-bottom: 16rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.item-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.reporter {
    font-size: 24rpx;
    color: #6b7280;
}

.time, .complete-time {
    font-size: 22rpx;
    color: #9ca3af;
}

/* 待处理状态特殊样式 */
.pending-item {
    border-left: 6rpx solid #f59e0b;
}

.pending-item .item-type {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

/* 处理中状态特殊样式 */
.processing-item {
    border-left: 6rpx solid #3b82f6;
}

.processing-item .item-type {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

/* 已办结状态特殊样式 */
.completed-item {
    border-left: 6rpx solid #10b981;
}

.completed-item .item-type {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

/* 空状态 */
.empty-state {
    text-align: center;
    padding: 120rpx 0;
}

.empty-text {
    font-size: 28rpx;
    color: #9ca3af;
}

/* 加载状态 */
.loading {
    text-align: center;
    padding: 120rpx 0;
    color: #6b7280;
    font-size: 28rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
    .status-tabs {
        padding: 0 16rpx;
    }

    .status-tab {
        padding: 28rpx 12rpx;
    }

    .reports-container {
        padding: 16rpx;
    }
}
