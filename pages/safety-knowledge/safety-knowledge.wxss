/* 安全知识页面 */
.safety-knowledge-page {
    background: #f8f9fa;
    min-height: 100vh;
}

/* 顶部导航 */
.header {
    display: flex;
    align-items: center;
    padding: 20rpx 32rpx;
    background: white;
    border-bottom: 1px solid #e5e7eb;
    position: sticky;
    top: 0;
    z-index: 100;
}

.back-btn {
    color: #6b7280;
    font-size: 28rpx;
    margin-right: 24rpx;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #1f2937;
}

/* 页面内容 */
.content {
    height: calc(100vh - 88rpx);
    padding: 24rpx;
}

/* 介绍区域 */
.intro-section {
    margin-bottom: 32rpx;
}

.intro-card {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border-radius: 16rpx;
    padding: 32rpx;
    color: white;
    box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.2);
}

.intro-header {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}

.intro-icon {
    font-size: 48rpx;
    margin-right: 16rpx;
}

.intro-title {
    font-size: 32rpx;
    font-weight: bold;
}

.intro-desc {
    font-size: 28rpx;
    line-height: 1.6;
    opacity: 0.9;
}

/* 分类区域 */
.categories-section {
    margin-bottom: 32rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 24rpx;
    padding-left: 8rpx;
}

.categories-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
}

.category-item {
    background: white;
    border-radius: 16rpx;
    padding: 32rpx 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    border: 2rpx solid transparent;
}

.category-item:active {
    transform: translateY(-4rpx);
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 分类颜色主题 */
.category-item.fire {
    border-color: #ef4444;
}

.category-item.fire:active {
    background: #fef2f2;
}

.category-item.electric {
    border-color: #f59e0b;
}

.category-item.electric:active {
    background: #fffbeb;
}

.category-item.mechanical {
    border-color: #3b82f6;
}

.category-item.mechanical:active {
    background: #eff6ff;
}

.category-item.height {
    border-color: #f97316;
}

.category-item.height:active {
    background: #fff7ed;
}

.category-item.edge {
    border-color: #8b5cf6;
}

.category-item.edge:active {
    background: #faf5ff;
}

.category-item.environment {
    border-color: #10b981;
}

.category-item.environment:active {
    background: #ecfdf5;
}

.category-item.ppe {
    border-color: #6366f1;
}

.category-item.ppe:active {
    background: #eef2ff;
}

.category-item.other {
    border-color: #6b7280;
}

.category-item.other:active {
    background: #f9fafb;
}

.category-icon {
    font-size: 48rpx;
    margin-bottom: 12rpx;
}

.category-name {
    font-size: 28rpx;
    font-weight: 500;
    color: #374151;
    text-align: center;
}

/* 知识内容显示区域 */
.knowledge-content-section {
    background: white;
    border-radius: 16rpx;
    padding: 32rpx;
    margin-bottom: 32rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
}

.knowledge-content-section.show {
    max-height: 2000rpx;
    overflow: visible;
}

.content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
    padding-bottom: 16rpx;
    border-bottom: 1px solid #e5e7eb;
}

.content-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #1f2937;
}

.close-btn {
    width: 48rpx;
    height: 48rpx;
    background: #f3f4f6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #6b7280;
    transition: all 0.2s ease;
}

.close-btn:active {
    background: #e5e7eb;
    transform: scale(0.95);
}

.content-list {
    max-height: 800rpx;
    overflow-y: auto;
}

.knowledge-item {
    background: #f8f9fa;
    border-radius: 12rpx;
    padding: 24rpx;
    margin-bottom: 16rpx;
    border-left: 4rpx solid #3b82f6;
}

.knowledge-item:last-child {
    margin-bottom: 0;
}

.item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12rpx;
}

.item-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #1f2937;
    flex: 1;
    margin-right: 16rpx;
}

.item-time {
    font-size: 22rpx;
    color: #6b7280;
    white-space: nowrap;
}

.item-content {
    margin-bottom: 12rpx;
}

.content-text {
    font-size: 26rpx;
    color: #4b5563;
    line-height: 1.6;
    white-space: pre-line;
}

.item-footer {
    display: flex;
    justify-content: flex-end;
}

.item-author {
    font-size: 22rpx;
    color: #6b7280;
}

.empty-content {
    text-align: center;
    padding: 80rpx 0;
}

.empty-text {
    font-size: 28rpx;
    color: #6b7280;
}

