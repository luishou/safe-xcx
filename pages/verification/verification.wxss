/* pages/verification/verification.wxss */
.verification-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #111827;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.picker {
  width: 100%;
  height: 88rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #111827;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 48rpx;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.submit-btn.disabled {
  opacity: 0.6;
}

/* 温馨提示 */
.tips {
  margin-top: 48rpx;
  padding: 24rpx;
  background: #fef3c7;
  border-radius: 12rpx;
  border-left: 6rpx solid #f59e0b;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #92400e;
  margin-bottom: 12rpx;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #b45309;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

/* 状态区域 */
.status-section {
  background: white;
  border-radius: 24rpx;
  padding: 80rpx 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.status-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  margin: 0 auto 32rpx;
}

.status-icon.pending {
  background: #fef3c7;
  color: #f59e0b;
}

.status-icon.approved {
  background: #d1fae5;
  color: #10b981;
}

.status-icon.rejected {
  background: #fee2e2;
  color: #ef4444;
}

.status-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 16rpx;
}

.status-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.status-time {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 24rpx;
}

/* 认证信息 */
.verified-info {
  margin-top: 48rpx;
  padding: 32rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  text-align: left;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #6b7280;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #111827;
}

/* 拒绝原因 */
.reject-reason {
  margin-top: 32rpx;
  padding: 24rpx;
  background: #fee2e2;
  border-radius: 12rpx;
  text-align: left;
}

.reason-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #dc2626;
  margin-bottom: 12rpx;
}

.reason-text {
  display: block;
  font-size: 26rpx;
  color: #991b1b;
  line-height: 1.6;
}

/* 重新申请按钮 */
.reapply-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 48rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: white;
}
