/* 举报详情页面 */
.report-detail-page {
    background: #f8f9fa;
    min-height: 100vh;
}

/* 顶部 */
.header {
    display: flex;
    align-items: center;
    padding: 20rpx 32rpx;
    background: white;
    border-bottom: 1px solid #e5e7eb;
}

.back-btn {
    color: #6b7280;
    font-size: 28rpx;
    margin-right: 24rpx;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #1f2937;
}

/* 信息区域 */
.info-section {
    background: white;
    margin: 24rpx;
    padding: 32rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.info-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
}

.report-id {
    font-size: 32rpx;
    font-weight: bold;
    color: #1f2937;
}

.status-badge {
    font-size: 24rpx;
    padding: 8rpx 16rpx;
    border-radius: 16rpx;
    font-weight: 500;
}

.status-pending {
    background: #fef3c7;
    color: #d97706;
}

.status-processing {
    background: #dbeafe;
    color: #1e40af;
}

.status-completed {
    background: #d1fae5;
    color: #065f46;
}

.info-row {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}

.info-row:last-child {
    margin-bottom: 0;
}

.info-label {
    font-size: 28rpx;
    color: #6b7280;
    width: 160rpx;
    flex-shrink: 0;
}

.info-value {
    font-size: 28rpx;
    color: #1f2937;
    flex: 1;
}

.description-row {
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: 20rpx;
}

.description-text {
    width: 100%;
    line-height: 1.6;
    background: #f8f9fa;
    padding: 20rpx;
    border-radius: 8rpx;
    border-left: 3rpx solid #3b82f6;
    margin-top: 8rpx;
}

/* 描述区域 */
.description-section, .photos-section, .actions-section, .plan-section {
    background: white;
    margin: 0 24rpx 24rpx;
    padding: 32rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.section-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 16rpx;
}

.description-content {
    font-size: 28rpx;
    color: #4b5563;
    line-height: 1.6;
}

/* 处理方案内容 */
.plan-content {
    font-size: 28rpx;
    color: #374151;
    line-height: 1.6;
    background: #f8fafc;
    padding: 24rpx;
    border-radius: 12rpx;
    border-left: 4rpx solid #3b82f6;
    white-space: pre-wrap;
    word-break: break-word;
}

/* 照片区域 */
.photos-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
}

.photo-item {
    width: 200rpx;
    height: 200rpx;
    border-radius: 12rpx;
    overflow: hidden;
    position: relative;
}

.photo {
    width: 100%;
    height: 100%;
}

/* 现场照片空态 */
.photos-empty {
    margin-top: 12rpx;
    color: #9ca3af;
    font-size: 26rpx;
}

/* 操作按钮区域 */
.action-buttons {
    display: flex;
    gap: 24rpx;
    margin-bottom: 24rpx;
}

.action-btn {
    flex: 1;
    padding: 24rpx;
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8rpx;
    font-size: 28rpx;
    font-weight: 500;
}

.confirm-btn {
    background: #3b82f6;
    color: white;
}

.reject-btn {
    background: #ef4444;
    color: white;
}

.btn-icon {
    font-size: 32rpx;
}

.btn-text {
    font-size: 26rpx;
}

.action-tips {
    background: #f9fafb;
    padding: 20rpx;
    border-radius: 12rpx;
    border-left: 4rpx solid #3b82f6;
}

.action-tips text {
    display: block;
    font-size: 24rpx;
    color: #6b7280;
    line-height: 1.5;
    margin-bottom: 8rpx;
}

.action-tips text:last-child {
    margin-bottom: 0;
}

/* 处理中状态的上传区域 */
.upload-section, .remark-section, .plan-input-section {
    margin-bottom: 32rpx;
}

.upload-title, .remark-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #374151;
    margin-bottom: 16rpx;
}

.upload-photos {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
}

.uploaded-photo {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    overflow: hidden;
    position: relative;
}

.uploaded-photo .photo {
    width: 100%;
    height: 100%;
}

.remove-btn {
    position: absolute;
    top: 8rpx;
    right: 8rpx;
    width: 40rpx;
    height: 40rpx;
    background: rgba(0,0,0,0.6);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    font-weight: bold;
}

.add-photo {
    width: 160rpx;
    height: 160rpx;
    border: 2rpx dashed #d1d5db;
    border-radius: 12rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #9ca3af;
}

.add-icon {
    font-size: 48rpx;
    margin-bottom: 8rpx;
}

.add-text {
    font-size: 22rpx;
}

.remark-input {
    width: 100%;
    min-height: 200rpx;
    padding: 20rpx;
    border: 1rpx solid #e5e7eb;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: #374151;
    line-height: 1.5;
}

/* 处理方案输入框样式 */
.plan-textarea {
    width: 100%;
    min-height: 200rpx;
    padding: 20rpx;
    border: 2rpx solid #e5e7eb;
    border-radius: 16rpx;
    font-size: 28rpx;
    color: #374151;
    line-height: 1.6;
    background: #fafafa;
    transition: border-color 0.3s ease;
    box-sizing: border-box;
}

.plan-textarea:focus {
    border-color: #3b82f6;
    background: #ffffff;
    box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

.char-count {
    text-align: right;
    font-size: 22rpx;
    color: #9ca3af;
    margin-top: 8rpx;
}

.required {
    color: #ef4444;
    margin-left: 4rpx;
}

.complete-btn {
    width: 100%;
    padding: 32rpx;
    background: #10b981;
    color: white;
    border-radius: 16rpx;
    font-size: 32rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
}

.complete-btn .btn-icon {
    font-size: 36rpx;
}

/* 加载状态 */
.loading {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 400rpx;
    color: #9ca3af;
    font-size: 28rpx;
}

/* 错误状态 */
.error {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 400rpx;
    color: #ef4444;
    font-size: 28rpx;
    text-align: center;
    padding: 0 40rpx;
}

.retry-btn {
    margin-top: 20rpx;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 12rpx;
    padding: 20rpx 40rpx;
    font-size: 26rpx;
}

/* 处理结论样式 */
.conclusion-section {
    margin: 24rpx;
}

.conclusion-card {
    background: white;
    border-radius: 16rpx;
    padding: 32rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
    border-left: 4rpx solid #10b981;
}

.conclusion-photos {
    margin-bottom: 24rpx;
}

.conclusion-plan {
    margin-bottom: 24rpx;
}

.conclusion-subtitle {
    font-size: 26rpx;
    font-weight: 600;
    color: #374151;
    margin-bottom: 12rpx;
}

.conclusion-plan-content {
    font-size: 28rpx;
    color: #4b5563;
    line-height: 1.6;
    background: #f8fafc;
    padding: 20rpx;
    border-radius: 12rpx;
    border-left: 3rpx solid #3b82f6;
    white-space: pre-wrap;
    word-break: break-word;
}

.conclusion-text {
    border-top: 1px solid #f3f4f6;
    padding-top: 24rpx;
}

.conclusion-label {
    font-size: 28rpx;
    color: #6b7280;
    margin-bottom: 8rpx;
    display: block;
}

.conclusion-content {
    font-size: 30rpx;
    color: #10b981;
    font-weight: 500;
    line-height: 1.6;
}

/* 处理历史样式 */
.history-section {
    margin: 24rpx;
}

/* 时间轴样式 */
.timeline {
    position: relative;
    padding-left: 48rpx;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 12rpx;
    top: 0;
    bottom: 0;
    width: 2rpx;
    background: #e5e7eb;
}

.timeline-item {
    position: relative;
    margin-bottom: 32rpx;
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
}

.timeline-item:last-child {
    margin-bottom: 0;
}

.timeline-item:active {
    transform: translateY(-2rpx);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.timeline-dot {
    position: absolute;
    left: -36rpx;
    top: 32rpx;
    width: 24rpx;
    height: 24rpx;
    background: #3b82f6;
    border: 4rpx solid #ffffff;
    border-radius: 50%;
    box-shadow: 0 0 0 2rpx #e5e7eb;
}

.timeline-item:last-child .timeline-dot {
    background: #10b981;
    box-shadow: 0 0 0 2rpx #e5e7eb;
}

.timeline-content {
    flex: 1;
}

.timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12rpx;
}

.timeline-action {
    font-size: 26rpx;
    color: #1f2937;
    font-weight: 600;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    padding: 6rpx 12rpx;
    border-radius: 8rpx;
    display: inline-block;
}

.timeline-time {
    font-size: 22rpx;
    color: #6b7280;
    background: #f3f4f6;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    white-space: nowrap;
}

.timeline-desc {
    font-size: 24rpx;
    color: #4b5563;
    line-height: 1.5;
    margin-top: 8rpx;
    padding: 12rpx;
    background: #fafafa;
    border-radius: 8rpx;
    border-left: 3rpx solid #60a5fa;
}

.timeline-meta {
    margin-top: 8rpx;
}

.timeline-user {
    font-size: 20rpx;
    color: #6b7280;
}

/* 严重程度样式 */
.severity-low {
    color: #10b981;
    background: #d1fae5;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
}

.severity-medium {
    color: #f59e0b;
    background: #fef3c7;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
}

.severity-high {
    color: #ef4444;
    background: #fecaca;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
}

.severity-critical {
    color: #dc2626;
    background: #fee2e2;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
    font-weight: bold;
}