/* pages/verification-admin/verification-admin.wxss */
.admin-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 标签页 */
.tabs {
  display: flex;
  background: white;
  padding: 0 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: #6b7280;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #667eea;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

/* 认证列表 */
.verification-list {
  padding: 24rpx 32rpx;
}

.loading,
.empty {
  text-align: center;
  padding: 120rpx 0;
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 认证项 */
.verification-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #111827;
}

.item-status {
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.item-status.status-pending {
  background: #fef3c7;
  color: #f59e0b;
}

.item-status.status-approved {
  background: #d1fae5;
  color: #10b981;
}

.item-status.status-rejected {
  background: #fee2e2;
  color: #ef4444;
}

/* 详细信息 */
.item-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #6b7280;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #111827;
  word-break: break-all;
}

.info-value.comment {
  color: #dc2626;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  gap: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f3f4f6;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.action-btn.approve {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn.reject {
  background: #fee2e2;
  color: #dc2626;
}
