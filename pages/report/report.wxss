/* pages/report/report.wxss */

.report-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.back-btn {
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.back-btn text:first-child {
  margin-right: 10rpx;
  font-size: 36rpx;
}

.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: bold;
}

/* 表单容器 */
.form-container {
  padding: 30rpx;
}

.form-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4757;
  margin-left: 5rpx;
}

/* 选择器 */
.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  background: #f8f9fa;
  font-size: 30rpx;
  color: #333;
}

.picker text:last-child {
  color: #999;
  font-size: 24rpx;
}

/* 输入框 */
.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  background: #f8f9fa;
  font-size: 30rpx;
  color: #333;
}

.input:focus {
  border-color: #667eea;
  background: white;
}

/* 文本域 */
.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  background: #f8f9fa;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.textarea:focus {
  border-color: #667eea;
  background: white;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 紧急程度选项 */
.urgency-options {
  display: flex;
  gap: 20rpx;
}

.urgency-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  background: #f8f9fa;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.urgency-item.active {
  border-color: #667eea;
  background: #667eea;
  color: white;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.dot.low {
  background: #2ed573;
}

.dot.medium {
  background: #ffa502;
}

.dot.high {
  background: #ff4757;
}

.urgency-item.active .dot {
  background: white;
}

/* 照片上传 */
.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.photo-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.photo-item image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4757;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
}

.add-photo {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.add-photo text:first-child {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.photo-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  line-height: 1.5;
}

/* 匿名选项 */
.anonymous-option {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #667eea;
  border-color: #667eea;
  color: white;
}

/* 提交按钮 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #e1e8ed;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.submit-btn:disabled {
  background: #ccc;
  color: #999;
}

.submit-btn:not(:disabled):active {
  transform: scale(0.98);
}

/* 图标字体 */
.iconfont {
  font-family: 'iconfont';
}

.icon-arrow-left::before {
  content: '←';
}

.icon-chevron-down::before {
  content: '▼';
}

.icon-plus::before {
  content: '+';
}

.icon-close::before {
  content: '×';
}

.icon-check::before {
  content: '✓';
}

.hazard-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.hazard-card {
  background: #f8f9fa;
  border: 2rpx solid #e1e8ed;
  border-radius: 16rpx;
  padding: 36rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.2s ease;
}

.hazard-card.selected {
  border-color: #ef4444;
  background: #fee2e2;
}

.hazard-icon {
  font-size: 48rpx;
}

.hazard-name {
  font-size: 28rpx;
  color: #374151;
}

/* 认证提示 */
.verification-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fef3c7;
  border-radius: 12rpx;
  border-left: 4rpx solid #f59e0b;
}

.tip-icon {
  font-size: 32rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #92400e;
}

.tip-link {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}