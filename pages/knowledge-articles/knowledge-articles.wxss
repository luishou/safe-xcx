.attachment-section {
  margin-top: 32rpx;
  border: 1px solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  background: #fafbfc;
}

.section-header {
  margin-bottom: 24rpx;
  border-bottom: 1px solid #e5e7eb;
  padding-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "üìé";
  margin-right: 12rpx;
  font-size: 28rpx;
}

.attachment-tips {
  font-size: 24rpx;
  color: #6b7280;
  display: flex;
  align-items: center;
}

.attachment-tips::before {
  content: "‚ÑπÔ∏è";
  margin-right: 8rpx;
  font-size: 20rpx;
}

.attachment-list {
  margin-bottom: 24rpx;
}

.attachment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  border: 1px solid #e5e7eb;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.02);
  transition: all 0.2s ease;
}

.attachment-item:hover {
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transform: translateY(-2rpx);
}

.attachment-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.file-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 32rpx;
  flex-shrink: 0;
}

.file-icon.pdf {
  background: #fee2e2;
  color: #dc2626;
}

.file-icon.word {
  background: #dbeafe;
  color: #2563eb;
}

.file-icon.unknown {
  background: #f3f4f6;
  color: #6b7280;
}

.file-details {
  flex: 1;
  min-width: 0;
}

.attachment-name {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-size {
  font-size: 22rpx;
  color: #6b7280;
}

.attachment-actions {
  margin-left: 16rpx;
}

.remove-btn {
  background: #fef2f2;
  color: #dc2626;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  border: 1px solid #fecaca;
  transition: all 0.2s ease;
}

.remove-btn:hover {
  background: #fee2e2;
  transform: scale(1.05);
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  color: #0369a1;
  border: 2rpx dashed #0ea5e9;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-top: 16rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.upload-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transition: left 0.5s;
}

.upload-btn:hover::before {
  left: 100%;
}

.upload-btn:active {
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
  transform: scale(0.98);
}

.upload-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.upload-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.upload-main {
  font-size: 32rpx;
  font-weight: 600;
  color: #0369a1;
  margin-bottom: 4rpx;
}

.upload-sub {
  font-size: 24rpx;
  color: #64748b;
  opacity: 0.8;
}

.article-row { padding:16rpx 0; border-bottom:1px solid #e5e7eb; }
.article-row:last-child { border-bottom:none; }
.header { display:flex; justify-content:space-between; align-items:center; }
.title-text { font-size:30rpx; font-weight:600; color:#1f2937; }
.ops { display:flex; gap:12rpx; }
.mini-btn { background:#eef2ff; color:#111827; }
.mini-btn.danger { background:#fee2e2; color:#b91c1c; }
.meta { color:#6b7280; font-size:24rpx; margin:8rpx 0; }
.content { color:#374151; font-size:28rpx; white-space:pre-wrap; }
.empty { text-align:center; color:#6b7280; padding:40rpx 0; }