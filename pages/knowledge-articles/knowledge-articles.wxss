.page { background:#f8f9fa; min-height:100vh; }
.top-nav { display:flex; align-items:center; padding:20rpx 32rpx; background:#fff; border-bottom:1px solid #e5e7eb; }
.back-btn { color:#6b7280; font-size:28rpx; margin-right:24rpx; }
.title { font-size:36rpx; font-weight:bold; color:#1f2937; }
.content { height: calc(100vh - 88rpx); padding: 24rpx; }

.form-card, .list-card { background:#fff; border-radius:16rpx; padding:24rpx; box-shadow:0 2rpx 8rpx rgba(0,0,0,0.06); margin-bottom:24rpx; }
.form-title, .list-title { font-size:32rpx; font-weight:600; color:#1f2937; margin-bottom:16rpx; }
.input, .textarea { background:#f3f4f6; border-radius:12rpx; padding:20rpx; margin-bottom:16rpx; font-size:28rpx; }
.textarea { min-height: 160rpx; }
.primary-btn { background:#3b82f6; color:#fff; border-radius:12rpx; padding:20rpx; }
.primary-btn:active { opacity:.85; }

/* 附件上传样式 */
.attachment-section { margin-top: 20rpx; }
.section-title { font-size: 28rpx; font-weight: 600; color: #374151; margin-bottom: 12rpx; }
.attachment-tips { font-size: 24rpx; color: #6b7280; margin-bottom: 16rpx; }

.attachment-list { margin-bottom: 16rpx; }
.attachment-item { display: flex; justify-content: space-between; align-items: center; background: #f8fafc; padding: 16rpx; border-radius: 8rpx; margin-bottom: 8rpx; }
.attachment-name { font-size: 26rpx; color: #374151; flex: 1; margin-right: 16rpx; }
.remove-btn { background: #fee2e2; color: #dc2626; font-size: 22rpx; padding: 8rpx 16rpx; border-radius: 6rpx; }

.upload-btn { display: flex; align-items: center; justify-content: center; background: #f0f9ff; color: #0369a1; border: 2rpx dashed #0ea5e9; border-radius: 12rpx; padding: 24rpx; margin-top: 16rpx; }
.upload-btn:active { background: #e0f2fe; }
.upload-icon { font-size: 32rpx; margin-right: 12rpx; }

.article-row { padding:16rpx 0; border-bottom:1px solid #e5e7eb; }
.article-row:last-child { border-bottom:none; }
.header { display:flex; justify-content:space-between; align-items:center; }
.title-text { font-size:30rpx; font-weight:600; color:#1f2937; }
.ops { display:flex; gap:12rpx; }
.mini-btn { background:#eef2ff; color:#111827; }
.mini-btn.danger { background:#fee2e2; color:#b91c1c; }
.meta { color:#6b7280; font-size:24rpx; margin:8rpx 0; }
.content { color:#374151; font-size:28rpx; white-space:pre-wrap; }
.empty { text-align:center; color:#6b7280; padding:40rpx 0; }