/* 首页样式 */
.container {
    min-height: 100vh;
    background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 60rpx 40rpx 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 顶部区域 */
.header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 24rpx;
}

/* Logo容器 */
.logo-container {
    margin-bottom: 24rpx;
}

.logo-circle {
    width: 120rpx;
    height: 120rpx;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.3);
}

.shield-icon {
    width: 60rpx;
    height: 60rpx;
    filter: brightness(0) invert(1);
}

/* 标题区域 */
.title-section {
    text-align: center;
}

.main-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #1f2937;
    display: block;
    margin-bottom: 8rpx;
    line-height: 1.2;
}

.sub-title {
    font-size: 24rpx;
    color: #6b7280;
    display: block;
    line-height: 1.4;
}

/* 标段卡片容器 */
.section-cards {
    width: 100%;
    max-width: 600rpx;
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}

/* 标段卡片 */
.section-card {
    width: 100%;
    height: 120rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.section-card:active {
    transform: scale(0.98);
}

/* TJ01标段 - 蓝紫色渐变 */
.tj01-card {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

/* TJ02标段 - 绿色渐变 */
.tj02-card {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

/* 卡片标题 */
.card-title {
    font-size: 32rpx;
    font-weight: bold;
    display: block;
}

/* 卡片副标题 */
.card-subtitle {
    font-size: 24rpx;
    opacity: 0.9;
    display: block;
}

/* 授权区域 */
.auth-section {
    background: white;
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
    text-align: center;
    min-height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.auth-content {
    margin-bottom: 40rpx;
}

.auth-icon {
    font-size: 80rpx;
    margin-bottom: 24rpx;
}

.auth-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 16rpx;
}

.auth-desc {
    font-size: 26rpx;
    color: #6b7280;
    line-height: 1.5;
}

.auth-buttons {
    display: flex;
    justify-content: center;
}

.auth-btn {
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
    color: white;
    border: none;
    border-radius: 16rpx;
    padding: 24rpx 48rpx;
    font-size: 28rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    gap: 12rpx;
    box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
    transition: all 0.3s ease;
}

.auth-btn:active {
    transform: scale(0.98);
}

.btn-icon {
    font-size: 24rpx;
}

/* 用户信息区域 */
.user-info-section {
    background: white;
    border-radius: 24rpx;
    padding: 40rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    gap: 24rpx;
}

.user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 3rpx solid #e5e7eb;
}

.avatar-img {
    width: 100%;
    height: 100%;
}

.default-avatar {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 50rpx;
    color: #9ca3af;
    background: #f3f4f6;
}

.user-details {
    flex: 1;
}

.user-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 8rpx;
}

.user-tips {
    font-size: 24rpx;
    color: #6b7280;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
    .container {
        padding: 40rpx 30rpx 30rpx;
    }
    
    .logo-circle {
        width: 140rpx;
        height: 140rpx;
    }
    
    .shield-icon {
        width: 70rpx;
        height: 70rpx;
    }
    
    .main-title {
        font-size: 42rpx;
    }
    
    .sub-title {
        font-size: 26rpx;
    }
    
    .section-card {
        height: 140rpx;
    }

    .card-icon {
        width: 56rpx;
        height: 56rpx;
    }

    .card-title {
        font-size: 28rpx;
    }
    
    .card-subtitle {
        font-size: 22rpx;
    }
}