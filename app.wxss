/* 网格布局 */
.grid {
  display: grid;
}

.grid-cols-2 {
  grid-template-columns: 1fr 1fr;
}

.grid-cols-3 {
  grid-template-columns: 1fr 1fr 1fr;
}

.gap-2 {
  gap: 16rpx;
}

.gap-3 {
  gap: 24rpx;
}

.gap-4 {
  gap: 32rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transition: all 0.3s ease;
}

.btn-primary:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

/* 状态徽章 */
.status-badge {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.8; }
}

/* 卡片悬停效果 */
.card-hover {
  transition: all 0.3s ease;
}

.card-hover:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 25rpx rgba(0,0,0,0.1);
}

/* 安全等级边框 */
.safety-level-high { border-left: 4rpx solid #ef4444; }
.safety-level-medium { border-left: 4rpx solid #f59e0b; }
.safety-level-low { border-left: 4rpx solid #10b981; }